<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SpeechBookTest.SpeechActivity">
<ImageView
    android:layout_marginTop="15sp"
    android:layout_marginLeft="15sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_button"
    />
    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/book_name_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:text="Kinh Khủng Thiên Tiên lộ"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/chapter_name_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Chương 1328 : Cuối cùng chu kỳ, cầu thông hắc "
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="37dp" />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        android:id="@+id/layout_play_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/skip_previous"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/skip_previous_speech"
            android:backgroundTint="#090606"
            android:backgroundTintMode="screen"
            app:iconTintMode="screen" />

        <Button
            android:id="@+id/play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/play_speech"
            android:backgroundTint="#FAFFFFFF" />

        <Button
            android:id="@+id/skip_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/skip_next_speech"
            android:backgroundTint="#FCFFFFFF" />
    </LinearLayout>

    <SeekBar
        android:layout_marginTop="20dp"
        android:id="@+id/seedbar_play"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:backgroundTint="#0C0606"
        android:backgroundTintMode="screen"
        android:progressTint="#0A1FDA" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:id="@+id/menu_and_setting"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView

            android:background="@drawable/baseline_menu_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/btn_open_list_chapter"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="150dp"
            android:text="DS Chương"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/btn_setting"
            android:background="@drawable/settings_24px"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="Cài Đặt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

</LinearLayout>