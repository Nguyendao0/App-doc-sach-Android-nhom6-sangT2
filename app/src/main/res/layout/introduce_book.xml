<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/btnBack"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_back"
            android:textSize="40dp"
            android:padding="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="290dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btnMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="..."
            android:textSize="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_TrangBia"
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:background="@drawable/bg_img_radius"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_TenTruyen"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Boss Phan dien nay cung co chut luong  tam" />

            <TextView
                android:id="@+id/tv_TenTacGia"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Thanh ky si" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_margin="15dp"
                android:text="5.0"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"/>

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:id="@+id/tv_SoLuongDanhGia"
                android:text="27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:text="danh gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_gray">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_view" />
            </LinearLayout>

            <TextView
                android:textSize="18dp"
                android:id="@+id/tv_SLView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_gray">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_chat" />
            </LinearLayout>

            <TextView
                android:textSize="18dp"
                android:id="@+id/tv_SLComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_gray">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_heart_white" />
            </LinearLayout>

            <TextView
                android:textSize="18dp"
                android:id="@+id/tv_SLTim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="555" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/bg_circle"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_book_white"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="  ĐỌC SÁCH"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="Sách cung cấp hướng dẫn toàn diện về lập trình ứng dụng Android với ngôn ngữ Kotlin. Nội dung sách bao gồm cài đặt môi trường lập trình, cấu trúc ứng dụng Android, các thành phần giao diện người dùng, xử lý dữ liệu, v.v. Sách phù hợp cho người mới bắt đầu cũng như những người đã có kinh nghiệm lập trình Android."
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Thông tin chi tiết"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="5dp"

                android:src="@drawable/ic_calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:textSize="18dp"
                android:text="Ngày xuất bản"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="end"
                android:id="@+id/tv_date"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="07/08/2022" />
<!--                android:text="@{@string/date_format(java.text.SimpleDateFormat)}"-->
<!--                android:textAppearance="?android:attr/textAppearanceMedium" -->

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="5dp"

                android:src="@drawable/ic_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:textSize="18dp"
                android:text="Thể loại "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="end"
                android:id="@+id/tv_Theloai"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xuyên không, Tiên hiệp " />
            <!--                android:text="@{@string/date_format(java.text.SimpleDateFormat)}"-->
            <!--                android:textAppearance="?android:attr/textAppearanceMedium" -->

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Đánh giá "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>